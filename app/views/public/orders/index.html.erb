<div class="container">
  <div class="row">
    <h4>注文履歴一覧</h4>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </thead>
      <% @orders.each do |order| %>
      <% if order.customer == current_customer %>
      <tbody>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_items.each do |order_item| %>
            <%= order_item.item.name %><br>
          <% end %>
        </td>
        <td><%= order.billing_amount %></td>
        <td><%= link_to "表示する", order_path(order.id), class:"btn btn-sm btn-primary" %></td>
      </tbody>
      <% end %>
      <% end %>
    </table>
  </div>
</div>