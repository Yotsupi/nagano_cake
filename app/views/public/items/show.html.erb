<div class="container">
  <div class="row">
    <div class="col-3">
      <%= attachment_image_tag @item, :image, :fill, 200, 150 %>
    </div>
    <div class="col-9">
      <h4><%= @item.name %></h4>
      <p><%= @item.introduction %></p>
      <p><%= (@item.price*@tax).round %>(税込)</p>
    </div>
  </div>
  <div class="row">
    <%= link_to "編集する", edit_admin_item_path ,class:"btn btn-success btn-lg" %>
  </div>

</div>