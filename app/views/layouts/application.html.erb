<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column">
    <header class="shadow-sm mb-3">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="#">
            <span>ながのCAKE</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to "マイページ", "/customers", class:"btn btn-secondary btn-sm mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class:"btn btn-secondary btn-sm mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート", cart_items_path, class: "btn btn-secondary btn-sm mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-secondary btn-sm mr-3" %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item">商品一覧</li>
                <li class="nav-item">会員一覧</li>
                <li class="nav-item">注文履歴一覧</li>
                <li class="nav-item">ジャンル一覧</li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-secondary btn-sm mr-3" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "About", "/about",class:"btn btn-secondary btn-sm mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class:"btn btn-secondary btn-sm mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", "/customers/sign_up" ,class:"btn btn-secondary btn-sm mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path ,class:"btn btn-secondary btn-sm mr-3" %>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="bg-dark pt-5">
    </footer>
  </body>


</html>
