<div class="container">
  <div class="row">
    <h4>注文情報確認</h4>
  </div>

  <div class ="row">
    <div class="col-8">
    <table class="table mr-3">
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </thead>
      <% @cart_items.each do |cart_item|  %>
      <tbody>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
        <% @total += cart_item.subtotal %>
      </tbody>
      <% end %>
    </table>
    </div>
    <div class="col-4">
    <table class="table">
        <tbody>
         <td>送料</td><td><%= @order.postage %></td>
         </tbody>
         <tbody>
         <td>商品合計</td><td><%= @total %></td>
         </tbody>
         <tbody>
         <td>請求金額</td><td><%= @order.postage + @total %></td>
         </tbody>
    </table>
    </div>
  </div>
  <div class="row">
      <strong>支払い方法　</strong>
      <%= @order.payment_i18n %>
  </div>

  <div class="row">
      <strong>お届け先　</strong>
      <%= @order.address_information %>
  </div>


</div>
