<div class="container">
<h3>新規会員登録</h3>

<%= form_with model: @customer, url: new_customer_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<table class="table table-borderless table-sm">
  <tr>
    <td style="width: 10%"><%= f.label "名前" %></td>
    <td style="width: 5%">(姓)</td>
    <td style="width: 10%"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
    <td style="width: 5%">(名)</td>
    <td style="width: 10%"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
  </tr>

  <tr>
    <td><%= f.label "フリガナ" %></td>
    <td>(セイ)</td>
    <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
    <td>(メイ)</td>
    <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
  </tr>

  <tr>
    <td><%= f.label "メールアドレス" %></td>
    <td></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>

  <tr>
    <td><%= f.label "郵便番号(ハイフンなし)" %></td>
    <td></td>
    <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
  </tr>

  <tr>
    <td><%= f.label "住所" %></td>
    <td></td>
    <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
  </tr>

  <tr>
    <td><%= f.label "電話番号(ハイフンなし)" %></td>
    <td></td>
    <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
  </tr>

  <tr>
    <td><%= f.label "パスワード" %>(<%= @minimum_password_length %>文字以上)</td>
    <td></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td><%= f.label "パスワード(確認用)" %></td>
    <td></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td></td> <td></td>
    <td><%= f.submit "新規登録" %></td>
  </tr>
</table>
<% end %>

<br>
<h3>既に登録済みの方</h3>

<%= link_to "こちら", new_customer_session_path %>からログインしてください

</div>
