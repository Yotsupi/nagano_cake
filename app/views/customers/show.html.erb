<div class="container">
<h4 class="ml-5">
  <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">マイページ</span>
</h4>

<div class="row mt-3">
  <div class="col-2">
    <strong>登録情報　</strong>
  </div>
  <div class="col-8">
    <%= link_to "編集する" , edit_customers_path, class: "btn btn-sm btn-success" %>
  </div>
</div>

<div class="row mt-3">
<table class="table table-bordered">
  <tr>
    <th class="table-active">氏名</th>
    <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <th class="table-active">カナ</th>
    <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th class="table-active">郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th class="table-active">住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th class="table-active">電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th class="table-active">メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>
</div>

<div class="row mb-3">
  <div class="col-2">
    <strong>配送先</strong>
  </div>
  <div class="col-8">
    <%= link_to "一覧を見る", address_index_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="row mb-3">
  <div class="col-2">
    <strong>注文履歴</strong>
  </div>
  <div class="col-8">
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>

</div>