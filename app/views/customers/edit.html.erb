<div class="container">
  <h4 class="mb-3">
    <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">会員情報編集</span>
  </h4>

<%= form_with model:@customer, url:customers_path, local:true do |f| %>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label "氏名" %>
    </div>
    <div class="col-2">
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class="col-2">
    <%= f.text_field :first_name, class:"form-control" %>      
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label "フリガナ" %>      
    </div>
    <div class="col-2">
      <%= f.text_field :last_name_kana, class:"form-control" %>
    </div>
    <div class="col-2">
      <%= f.text_field :first_name_kana, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
    <%= f.label "郵便番号" %>     
    </div>
    <div class="col-2">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label "住所" %> 
    </div>
    <div class="col-6">
      <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label "電話番号" %>
    </div>
    <div class="col-2">
      <%= f.text_field :telephone_number, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="col-2">
      <%= f.text_field :email, class:"form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2"></div>
    <div class="col-5 d-flex justify-content-between">
      <%= f.submit '編集内容を保存', class:"btn btn-success position" %>
      <%= link_to "退会する", customers_confirm_path, class:"btn btn-danger" %>     
    </div>
  </div>

<% end %>

</div>