<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <%= f.label "ジャンル名" %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <th>ジャンル</th>
    <th></th>
  </thead>
  <% @genres.each do |genre| %>
    <tbody>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    </tbody>
  <% end %>
</table>