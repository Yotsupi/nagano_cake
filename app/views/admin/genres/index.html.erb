<div class="container">
  <h3 class="ml-5 mb-5">
      <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">ジャンル一覧・追加</span>
  </h3>
  
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <div class="form-group row">
    <div class="col-2">
      <%= f.label "ジャンル名" %>
    </div>
    <div class="col-3">
      <%= f.text_field :name, placeholder: "ジャンル名", class:"form-control" %>
    </div>
    <div class="col-3">
      <%= f.submit '新規登録', class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
  
  <div class="row">
    <div class="col-5">
      <table class="table">
        <thead class="table-active">
          <th>ジャンル</th>
          <th></th>
        </thead>
        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
  

</div>