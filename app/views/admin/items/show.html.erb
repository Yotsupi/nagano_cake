<div class="container">
  <h3 class="ml-5 mb-3">
    <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">商品詳細</span>
  </h3>
  
  <div class="row">
    <div class="col-3">
      <%= attachment_image_tag @item, :image, :fill, 200, 150 %>
    </div>
    <div class="col-9">
      <div class="row mb-3">
        <div class="col-2">
          商品名
        </div>
        <div class="col-4">
          <%= @item.name %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-2">
          商品説明
        </div>
        <div class="col-4">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-2">
          ジャンル
        </div>
        <div class="col-4">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-2">
          税込価格<br>(税抜き価格)
        </div>
        <div class="col-4">
          <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-2">
          販売ステータス
        </div>
        <div class="col-4">
          <% if @item.is_active == true %>
          <strong class="text-success">販売中</strong>
          <% else %>
          販売停止中
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_item_path ,class:"btn btn-success btn-lg" %>
  </div>

</div>