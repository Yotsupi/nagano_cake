<div class="container">
  <div class="row">
  <h2>商品一覧</h2>
  <%= link_to "+", new_admin_item_path, class:"btn btn-light rounded-circle p-0 shadow-sm", style:"width:2rem;height:2rem;" %>
  </div>

  <table class="table">
    <thead>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </thead>
    <% @items.each do |item|  %>
    <tbody>
      <td><%= item.id %></td>
      <td><%= link_to "#{item.name}", admin_item_path(item.id) %></td>
      <td><%= number_to_currency(item.price, unit: "¥",strip_insignificant_zeros: true) %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active == true %>
        販売中
        <% else %>
        販売停止中
        <% end %>
      </td>
    </tbody>
    <% end %>
  </table>
</div>