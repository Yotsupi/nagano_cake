<h1>商品編集</h1>

<%= form_with model: @item, url: edit_admin_item_path, local:true do |f| %>
  <p>商品画像</p>
  <%= f.attachment_field :image %>
  <p>商品名</p>
  <%= f.text_field :name %>
  <p>商品説明</p>
  <%= f.text_area :introduction %>
  <p>税抜価格</p>
  <%= f.text_field :price %>
  <p>販売ステータス</p>
  <%= f.radio_button :is_active, "販売中" %>販売中
  <%= f.radio_button :is_active, "販売停止中" %>販売停止中
  <br>
  <%= f.submit '変更を保存' %>
<% end %>