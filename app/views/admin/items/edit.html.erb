<div class="container">
  <h3 class="ml-5">
    <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">商品編集</span>
  </h3>


  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
  <div class="form-group row justify-content-center">
    <div class="col-2">
      商品画像
    </div>
    <div class="col-3">
      <%= f.attachment_field :image %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-2">
      商品名
    </div>
    <div class="col-3">
      <%= f.text_field :name, placeholder: "商品名", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-2">
      商品説明
    </div>
    <div class="col-3">
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row justify-content-center">
    <div class="col-2">
      ジャンル
    </div>
    <div class="col-3">
      <%= f.collection_select :genre_id, @genres.all, :id, :name, include_blank: "----" %>
    </div>
  </div>
  
  <div class="form-group row justify-content-center">
    <div class="col-2">
      税抜価格
    </div>
    <div class="col-3">
      <%= f.text_field :price, placeholder: "1000", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row justify-content-center">
    <div class="col-2">
      販売ステータス
    </div>
    <div class="col-3">
      <%= f.radio_button :is_active, true %>販売中
      <%= f.radio_button :is_active, false %>販売停止中
    </div>
  </div>
  
  <div class="row justify-content-center">
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  </div>
  <% end %>

</div>