<div class="container">
  <h3 class="ml-5">
    <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">会員一覧</span>
  </h3>
  
  <div class="row">
    <div class="col-10">
      <table class="table">
        <thead class="table-active">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <% @customers.each do |customer|  %>
        <tbody>
          <td><%= customer.id %></td>
          <td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active == true %>
            <span class="text-success">有効</span>
            <% else %>
            <span class="text-mute">無効</span>
            <% end %>
          </td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>

</div>