<h3>会員一覧</h3>

<table class="table">
  <thead>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  <% @customers.each do |customer|  %>
  <tbody>
    <td><%= customer.id %></td>
    <td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id) %></td>
    <td><%= customer.email %></td>
    <td>
      <% if customer.is_active == true %>
      有効
      <% else %>
      無効
      <% end %>
    </td>
  </tbody>
  <% end %>
</table>