<div class="container">
  <h3 class="ml-5">
    <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </span>
  </h3>

  <table class="table table-borderless">
    <tr>
      <th style="width:20%">会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <% if @customer.is_active == true %>
        <span class="text-success">有効</span>
        <% else %>
        <span class="text-mute">無効</span>
        <% end %>
      </td>
    </tr>
  </table>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
  </div>

</div>