<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-6">
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td>
            <%= link_to admin_customer_path(@order.customer.id) do %>
            <%= @order.customer.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %><br>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <% @order.order_items.each do |order_item| %>
        <tbody>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.with_tax_price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.subtotal %></td>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-4">
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th>
          <td>
            <% @order.order_items.each do |order_item| %>
              <% @total += order_item.subtotal %>
            <% end %>
            <%= @total %>円
          </td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.billing_amount %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>