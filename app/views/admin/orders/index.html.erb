<div class="container">
  <h3 class="ml-5">
    <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">
      注文履歴一覧
    </span>
  </h3>
  <table class="table">
    <thead class="table-active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
          <%= l order.created_at %>
          <% end %>
        </td>
        <td><%= order.customer.name %></td>
        <td><%= order.order_items.sum(:amount) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>