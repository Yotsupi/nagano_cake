<div class="container">
  <h4>注文履歴一覧</h4>
  <table class="table">
    <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at %>
          <% end %>
        </td>
        <td><%= order.customer.name %></td>
        <td><%= order.order_items.sum(:amount) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>