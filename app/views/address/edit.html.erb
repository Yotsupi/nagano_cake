<div class="container">
  <h4 class="mb-3">
    <span style="background: linear-gradient(transparent 50%, #ffcccc 0%);">配送先編集</span>
  </h4>

<%= form_with model: @address, url: address_path, local:true do |f| %>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-2">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label "住所" %>
    </div>
    <div class="col-5">
      <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label "宛名" %>
    </div>
    <div class="col-2">
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="col-3"></div>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
    <div class="col-2">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
  </div>
    <% end %>

</div>