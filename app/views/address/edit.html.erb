<h4>配送先編集</h4>

<%= form_with model: @address, url: address_path, local:true do |f| %>
  <%= f.label "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %><br>
  <%= f.label "住所" %>
  <%= f.text_field :address %><br>
  <%= f.label "宛名" %>
  <%= f.text_field :name %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.submit "変更内容を保存", class:"btn-success" %>
<% end %>