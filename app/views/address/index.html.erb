<div class="container">
  <div class="row">
    <h4>配送先登録/一覧</h4>
  </div>

  <div class="row">
    <%= form_with model: @address, url: address_index_path, local:true do |f| %>
      <%= f.label "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, placeholder: "0000000" %><br>
      <%= f.label "住所" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %><br>
      <%= f.label "宛名" %>
      <%= f.text_field :name, placeholder: "令和道子" %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.submit "新規登録", class:"btn-success" %>
    <% end %>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-danger mr-3" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-success" %>
          </td>
        </tbody>
        <% end %>
    </table>
  </div>

</div>