<div class="container">
  <div class="row">
    <h4>ショッピングカート</h4>
    <%= link_to "カートを空にする", empty_cart_path, method: :delete, clas: "btn-success" %>
  </div>

  <div class="row">
  <table class="table table-bordered">
    <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>　</th>
    </thead>
    <% @cart_items.each do |cart_item|  %>
    <tbody>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), local:true do |f| %>
        <%= f.select :amount, *[1..10], prompt: cart_item.amount %>
        
        <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <% @total += cart_item.subtotal %>
      <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete %></td>
    </tbody>
    <% end %>
  </table>
  </div>

  <div class="row">
    <div class="col-4">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-sm btn-success mr-3" %>
    </div>
    <div class="col-4"></div>
    <div class="col-4">
      <table class="table table-bordered">
        <tbody>
          <td>合計金額</td>
          <td><%= @total %>円</td>
        </tbody>
      </table>
    <div class="col-4"></div>
  </div>

  <div class="row">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-sm btn-success mr-3" %>
  </div>

</div>